{% extends "::admin.html.twig" %}

{% block title %} | Questions by Users{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            List of Questions
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Questions</li>
        </ol>
    </section>

    <section class="content">
        <!-- /.row -->

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <div class="col-md-offset-1 col-md-10">
                <!-- /.row -->


                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Unapproved</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                            </button>
                            {#<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>#}
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Question</th>
                                    <th>Date/Time</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set count = 1 %}
                                {% for item in q %}
                                    {% if item.approved == 0 %}
                                        <tr>
                                            <td>{{ count }}</td>
                                            <td>{{ item.question }}</td>
                                            <td>{{ item.date|date("d/m/Y H:s:i") }}</td>
                                            <td>
                                                <h4 style="margin: 0">
                                                    <a href="{{ path('panel_index_change',{id:item.id}) }}"><i class="fa fa-check-circle-o"></i></a>
                                                    <a href="{{ path('panel_index_delete',{id:item.id}) }}" style="margin-left: 10px;color: orangered"><i class="fa fa-cut"></i></a>
                                                </h4>
                                            </td>
                                        </tr>
                                    {% endif %}

                                    {% set count = count + 1 %}
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.box-body -->

                    <!-- /.box-footer -->
                </div>
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Approved</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                            </button>
                            {#<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>#}
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Question</th>
                                    <th>Date/Time</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set count = 1 %}
                                {% for item in q %}
                                    {% if item.approved == 1 %}
                                        <tr>
                                            <td>{{ count }}</td>
                                            <td>{{ item.question }}</td>
                                            <td>{{ item.date|date("d/m/Y H:s:i") }}</td>
                                            <td>
                                                <h4 style="margin: 0">
                                                    <a href="{{ path('panel_index_change',{id:item.id}) }}" style="color: darkred"><i class="fa fa-ban"></i></a>
                                                    <a href="{{ path('panel_index_delete',{id:item.id}) }}" style="margin-left: 10px;color: orangered"><i class="fa fa-cut"></i></a>
                                                </h4>
                                            </td>
                                        </tr>
                                    {% endif %}

                                    {% set count = count + 1 %}
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.box-body -->

                    <!-- /.box-footer -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->


            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
{% endblock %}

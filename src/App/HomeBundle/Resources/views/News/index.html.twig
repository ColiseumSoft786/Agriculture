{% extends "::single.html.twig" %}

{% block title %}Newses{% endblock %}

{% block body %}

    <section class="module">
        <div class="container">
            <div class="row multi-columns-row post-columns">
                {% for item in news %}
                    <div class="col-sm-6 col-md-3 col-lg-3">
                        <div class="post">
                            <div class="post-thumbnail"><a href="{{ path('News_single',{id:item.id}) }}"><img src="{{ asset(item.image) }}" alt="Blog-post Thumbnail"/></a></div>
                            <div class="post-header font-alt">
                                <h2 class="post-title"><a href="{{ path('News_single',{id:item.id}) }}">{{ item.name }}</a></h2>
                                {#<div class="post-meta">By&nbsp;<a href="#">Mark Stone</a>&nbsp;| 23 November | 3 Comments#}
                                {#</div>#}
                            </div>
                            <div class="post-entry">
                                <p>{{ item.details|slice(0,160)|raw }} ...</p>
                            </div>
                            <div class="post-more"><a class="more-link" href="{{ path('News_single',{id:item.id}) }}">Read more</a></div>
                        </div>
                    </div>
                {% endfor %}

            </div>
            <div class="pagination font-alt"><a href="#"><i class="fa fa-angle-left"></i></a><a class="active" href="#">1</a><a href="#">2</a><a href="#">3</a><a href="#">4</a><a href="#"><i class="fa fa-angle-right"></i></a></div>
        </div>
    </section>

{% endblock %}

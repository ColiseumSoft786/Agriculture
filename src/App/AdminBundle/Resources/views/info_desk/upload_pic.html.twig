{% extends "::admin.html.twig" %}
{% block body %}
    <section class="content-header">
        <h1>
            Picture Uplaod
        </h1>
    </section>

    <section class="content">
        <!-- /.row -->

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <div class="col-md-offset-1 col-md-10">
                <!-- /.row -->

                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Picture Upload</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                            </button>
                            {#<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>#}
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form id="pubcreateform" action="" method="post" enctype="multipart/form-data">
                            <div class="col-sm-6">
                                <label for="" class="label label-info">Select Image</label>
                                <input type="file" name="pic" id="doc" class="form-control">
                                <input style="margin-top: 10px" type="submit" value="Update" class="btn btn-sm btn-info pull-right" >
                            </div>
                            <div class="col-sm-offset-6 col-sm-6">
                            </div>
                            <div class="col-md-12">
                                    {% for item in pics %}
                                <div class="col-md-4">
                                    {% set id = 'link' %}
                                    {% set id = id~item.id %}
                                    <img src="{{ asset(item.path) }}" id="img{{ item.id }}" style="width: 100%;height: 100%;margin-top: 10px" onclick="clicked(this)">
                                    <p id="{{ id }}" hidden>{{ item.path }}</p>
                                    <input type="text" name="meme-image-url-0{{ item.id }}" id="meme-image-url-0{{ item.id }}" class="disabled" />
                                    <script>

                                        document.getElementById('meme-image-url-0{{ item.id }}').value = document.getElementById("img{{ item.id }}").src;
                                        document.getElementById('meme-top-text-0{{ item.id }}').focus();
                                    </script>
                                    <a onclick="copyToClipboard('#{{ id }}')" href="{{ path('admin_upload_pic',{action:'delete',id:item.id}) }}" style="position: absolute;top: 8%; left: 15%;transform: translate(-50%, -50%);-ms-transform: translate(-50%, -50%);">Remove</a>
                                    <a onclick="myFunction{{ item.id }}()" href="#" style="position: absolute;top: 8%; right: 8%;transform: translate(-50%, -50%);-ms-transform: translate(-50%, -50%);">Copy</a>
                                </div>
                                        <script>
                                            function myFunction{{ item.id }}() {
                                                var copyText = document.getElementById("meme-image-url-0{{ item.id }}");
                                                copyText.select();
                                                document.execCommand("copy");
                                            }
                                        </script>
                                    {% endfor %}
                            </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.box-body -->

                    <!-- /.box-footer -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->


            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
{% endblock %}

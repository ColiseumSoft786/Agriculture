{% extends "::single.html.twig" %}
{% block title %}{{ name }}{% endblock %}
{% block body %}

    <section class="module-small">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-3 col-md-6">
                <h3>{{ name }}</h3>
                <table class="table table-bordered">
                    <tr>
                    </tr>
                    {% if data|length != 0 %}
                        {% for item in data %}
                            <tr>
                                <td style="vertical-align: middle" class="col-md-4"> <img src="{{ asset(item.img) }}" style="width: 80px;height: 80px" alt="" onerror="this.src='{{ asset('bundles/Images/not-found.png') }}'"><p style="position: absolute;margin-top: -80px;margin-left:100px;font-size: 17px;line-height: 1.3">{{ item.name }}<br><button style="margin-top: 15px" class="btn btn-default btn-xs btn-xs"><a href="{{ path('home_info_desk',{id:item.id,action:item.name|replace({' ':'_'})}) }}" style="font-size: 14px;" class="text-blue pull-right">More Details</a></button></p><br></td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="3" style="text-align: center">No Data Found</td>
                        </tr>
                    {% endif %}


                </table>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

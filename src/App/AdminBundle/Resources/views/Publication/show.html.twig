{% extends "::admin.html.twig" %}

{% block title %} | {{ pub.name }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            List of {{ pub.name }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>{{ pub.name }}</li>
        </ol>
    </section>

    <section class="content">
        <!-- /.row -->

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <div class="col-md-offset-1 col-md-10">
                <!-- /.row -->

                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info collapsed-box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Edit {{ pub.name }}</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                            </button>
                            {#<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>#}
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="col-md-offset-4 col-md-4">
                            <form action="{{ path('admin_publication_name_edit',{id:pub.id}) }}">
                                <input type="text" class="form-control" value="{{ pub.name }}" name="name">
                                {% if pubs|length == 0 %}
                                    <a class="btn btn-danger pull-left" href="{{ path('admin_publication_name_delete',{id:pub.id}) }}" style="margin-top: 10px">Delete</a>
                                {% endif %}
                                <input type="submit" value="Edit" class="btn btn-info pull-right" style="margin-top: 10px">

                            </form>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <!-- /.box-footer -->
                </div>
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">List of {{ pub.name }} <a style="margin-left: 10px" href="{{ path('admin_publication_new',{name:pub.name,id:pub.id}) }}"><i class="fa fa-plus-circle"></i></a></h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                            </button>
                            {#<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>#}
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Document Uploaded</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set count = 1 %}
                                {% for item in pubs %}
                                    <tr>
                                        <td>{{ count }}</td>
                                        <td>{{ item.name }}</td>
                                        <td>{% if item.document == null %}
                                                NO
                                            {% else %}
                                                YES
                                            {% endif %}</td>
                                        <td>
                                            <h4 style="margin: 0">
                                                <a href="{{ path('admin_publication_edit',{id:item.id}) }}"><i class="fa fa-edit"></i></a>
                                                <a href="{{ path('admin_publication_delete',{id:item.id}) }}" style="margin-left: 10px;color: orangered"><i class="fa fa-cut"></i></a>
                                            </h4>
                                        </td>
                                    </tr>
                                    {% set count = count + 1 %}
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.box-body -->

                    <!-- /.box-footer -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->


            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
{% endblock %}

{% extends "::admin.html.twig" %}

{% block title %} | {{ news.name }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            Edit {{ news.name }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">{{ news.name }}</li>
        </ol>
    </section>

    <section class="content">
        <!-- /.row -->

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <div class="col-md-offset-1 col-md-10">
                <!-- /.row -->

                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Edit {{ news.name }}</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                            </button>
                            {#<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>#}
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <form id="newscreateform" action="" method="post" enctype="multipart/form-data">
                                <div class="col-sm-6">
                                    <label for="" class="label label-info">Name <span class="text-danger">*</span></label>
                                    <input value="{{ news.name }}" type="text" name="name" id="name" class="form-control" placeholder="Enter Name">
                                </div>
                                <div class="col-sm-6">
                                    <label for="" class="label label-info">Image</label>
                                    <input type="file" name="doc" id="doc" class="form-control">
                                </div>
                                <div class="col-sm-12">
                                    <label for="" class="label label-info">More Information <span class="text-danger">*</span></label>
                                    <textarea name="details" id="details" class="form-control" rows="10" placeholder="Enter More Information about">{{ news.details }}</textarea>
                                    <input style="margin-top: 10px" type="submit" class="btn btn-sm btn-info pull-right">
                                </div>
                            </form>
                            <script>
                                $('#newscreateform').submit(function (e) {
                                    textbox_data = CKEDITOR.instances.details.getData();
                                    if($('#name').val() == ""){
                                        alert('Name is empty');
                                        e.preventDefault();
                                    }
                                    else if(textbox_data === ''){
                                        alert('Details is empty');
                                        e.preventDefault();
                                    }
                                })
                            </script>

                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.box-body -->

                    <!-- /.box-footer -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->


            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
{% endblock %}

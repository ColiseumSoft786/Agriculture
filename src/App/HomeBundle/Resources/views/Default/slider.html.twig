<ul class="slides">
    {% for item in slider %}
        <li class="bg-dark-30 bg-dark" style="background-image:url({{ asset(item.path) }});">
            <div class="titan-caption">
                <div class="caption-content">
                    <div class="font-alt mb-30 titan-title-size-1"><p style="font-size: 30px">{{ item.name }}</p></div>
                </div>
            </div>

        </li>
    {% endfor %}
    <div style="position: absolute;z-index: 9999;left:50%;bottom: 20px">
        <div style="position: relative;left: -50%;" class="hidden-sm hidden-xs">
            <div class="text-black container">

                <div class="col-md-offset-3 col-md-6" style="background-color: white;padding-top: 10px">
                    <p style="text-align: center;font-weight: 600">Rates of crops in different cities and vegetables.</p>
                    <form action="{{ path('home_homepage_infos_chart') }}" method="post">
                        <div class="col-md-6">
                            <label for="">Select Vegetable</label>
                            <select name="veg" class="form-control" id="" style="border: 1px solid #ccc !important;">
                                <option value="" >- Select Vegetable -</option>
                                {% for item in veg %}
                                    <option value="{{ item.id }}">{{ item.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="">Select City</label>
                            <select name="city" class="form-control" id="">
                                <option value="" style="border: 1px solid #ccc !important;">- Select City -</option>
                                {% for item in city %}
                                    <option value="{{ item.id }}">{{ item.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="">Start Date</label>
                            <input type="date" name="sdate" class="form-control" style="border: 1px solid #ccc !important;">
                        </div>
                        <div class="col-md-6">
                            <label for="">End Date</label>
                            <input type="date" name="edate" class="form-control" style="border: 1px solid #ccc !important;">
                        </div>
                        <input type="submit" class="btn btn-d pull-right" style="margin-top: 10px;margin-right: 20px;margin-bottom: 10px" value="Filter">
                    </form>

                </div>
            </div>

        </div>
    </div>


</ul>
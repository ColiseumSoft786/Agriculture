<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Edit City</h4>
</div>
<div class="modal-body">
    <form action="{{ path('admin_rates_city_edit') }}" method="POST">
        <input type="hidden" value="{{ city.id }}" name="id">
        <input type="text" class="form-control" name="name" value="{{ city.name }}">
        <input type="submit" class="btn btn-warning pull-right" style="margin-top: 10px">
    </form>
</div>